<h1>Works: index</h1>

<p>Here are all of the work items:</p>

<table>
	<tbody>
		<tr>
			<th>User</th>
			<th>Project</th>
			<th>Date/Time</th>
			<th>Hours</th>
			<th>View</th>
		</tr>
		<% @works.each do |work| %>
			<tr>
				<td><%= work.user %></td>
				<td><%= link_to work.project, work.project %></td>
				<td><%= work.datetimeperformed.strftime('%m/%d/%Y %H:%M') %></td>
				<td><%= work.hours %></td>
				<td><%= link_to 'View', work %></td>
			</tr>
		<% end %>
	</tbody>
</table>