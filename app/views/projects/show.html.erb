<h1><%= @project.name %></h1>

<p>Company: <%= @project.company.name %></p>
<p>Default Rate: <%= @project.default_rate %></p>
<p>Slug: <%= @project.slug %></p>

<p><%= link_to 'All Projects', projects_path %></p>

<table>
	<tbody>
		<tr>
			<th>User</th>
			<th>Date/Time</th>
			<th>Hours</th>
			<th>View</th>
		</tr>
		<% @project.works.each do |work| %>
			<tr>
				<td><%= work.user %></td>
				<td><%= work.datetimeperformed.strftime('%m/%d/%Y %H:%M') %></td>
				<td><%= work.hours %></td>
				<td><%= link_to 'View', work %></td>
			</tr>
		<% end %>
	</tbody>
</table>