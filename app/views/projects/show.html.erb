<h1><%= @project.name %></h1>

<p>Company: <%= @project.company.name %></p>
<p>Default Rate: <%= @project.default_rate %></p>
<p>Slug: <%= @project.slug %></p>

<% if @project.works.size > 0 %>
<table>
	<tbody>
		<tr>
			<th>User</th>
			<th>Project</th>
			<th>Date/Time</th>
			<th>Hours</th>
			<th>View</th>
		</tr>
		<%= render partial: "works/work", collection: @project.works %>
	</tbody>
</table>
<% else %>
	<p>No Work Items.</p>
<% end %>

<% content_for :aside do %>
	<% render 'sidebar' %>
<% end %>